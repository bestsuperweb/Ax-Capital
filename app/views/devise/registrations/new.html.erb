<div class="row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="col-md-3">
      <h2>Sign up</h2>

      <div class="field form-group">
        <%= f.label :mobile %><br />
        <div class="input-group">
          <span class="input-group-addon">
            <img height='16px' src='/gb_flag.ico'/>
            &nbsp;+44
          </span>
          <%= f.number_field :mobile, class: "form-control" %>
        </div>
      </div>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off",
          class: "form-control", type: "password", "data-toggle": "password" %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off",
          class: "form-control", type: "password", "data-toggle": "password" %>
      </div>

      <div class="actions form-group">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
        <%= render "devise/shared/links" %>
      </div>
    </div>

    <div class="col-md-9">
      <h3>Terms of Service</h3>
      <div style="height: 300px; overflow: auto" class="simple_border">
        <p>
          <%= get_content('public/terms_of_service.html') %>
        </p>
      </div>
      <div class="field form-group" style="margin-top: 10px">
        <%= f.check_box :accept_terms_of_service %>
        <%= f.label :accept_terms_of_service %>
      </div>
    </div>

  </div>

<% end %>
