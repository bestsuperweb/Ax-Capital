<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    
    <h2 align="center">Uploaded Documents</h2>

    <div class="col-md-2"></div>
    <table class="col-md-8">
      <thead>
        <tr>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @documents.each do |document| %>
          <tr>
            <td class="bg-success">
              <a href=<%= document.attachment.url %>>
                <span>
                  <strong><%= document.name %></strong>
                  &nbsp;

                  <% begin %>
                  <%= File.basename(document.attachment.path) %>
                  <%rescue %>
                  <p>' '</p>
                  <% end %>
                </span>
              </a>
            </td>
            <td><%= link_to 'Delete', document, method: :delete, data: { confirm: 'Are you sure to delete this document permanently?' }, class: "btn btn-danger btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br/>
    <br/>
    <br/>
    <br/>
    <br/>

    <%= render 'new_form' %>
    <%#= link_to 'New Document', new_document_path %>
  </div>
</div>
